{
  "extends": ["eslint:recommended", "airbnb-base"],
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "script"
  },
  "rules": {
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "double"],
    "arrow-parens": ["error", "always"],
    "no-console": "off",
    "function-paren-newline": "off",
    "no-underscore-dangle": "off",
    "func-names": "off",
    "strict": "off",
    "no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": false,
        "varsIgnorePattern": "[iI]gnored"
      }
    ]
  }
}
